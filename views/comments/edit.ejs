<% include  ../partials/header.ejs %>
    <div class='row' style='text-align:center;'>
        <h1> Edit Comment </h1>
        
        <div style='width:30%; margin: 40px auto;'>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comments._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                     <input class='form-control' type="text" name="comments[text]" value="<%= comments.text %>">
                </div>
                 <div class='form-group'>
                    <button class='btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
                
            </form> 
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
